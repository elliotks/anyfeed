{
	"name": "nfd",
	"description": "Open-source and self-hosted solution that assists developers in staying up-to-date with the latest industry trends. It leverages RSS feeds and content recognition algorithms to provide a comprehensive range of content to follow.",
	"author": "Eddy Bordi",
	"license": "MIT",
	"homepage": "https://github.com/edbrdi/anyfeed",
	"repository": {
		"type": "git",
		"url": "https://github.com/edbrdi/anyfeed.git"
	},
	"bugs": {
		"url": "https://github.com/edbrdi/anyfeed/issues"
	},
	"keywords": [
		"feed",
		"reader",
		"dev-tool",
		"rss",
		"feedly-alternative",
		"self-hosted",
		"command-line-tool",
		"svelte",
		"playwright"
	],
	"files": [
		"./dist",
		"./build"
	],
	"version": "0.0.4",
	"private": false,
	"scripts": {
		"dev": "vite dev --host --port 1337",
		"build:cli": "rm -rf ./dist && npx tsc -p ./src/cli && chmod +x ./dist/cli/index.js && touch ./dist/package.json && echo '{}' > ./dist/package.json",
		"build:app": "rm -rf ./build && BUILDING=true vite build",
		"build": "npm run build:cli && npm run build:app",
		"preview": "vite preview --host --port 1337",
		"test": "npm run test:e2e",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test:e2e": "node ./tests/before.mjs && TEST=true playwright test && node ./tests/after.mjs",
		"test:e2e:debug": "node ./tests/before.mjs && TEST=true  playwright test --debug && node ./tests/after.mjs",
		"test:unit": "vitest"
	},
	"bin": {
		"nfd": "./dist/cli/index.js"
	},
	"devDependencies": {
		"@iconify/json": "^2.2.91",
		"@playwright/test": "^1.37.1",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-node": "^1.3.1",
		"@sveltejs/kit": "^1.24.1",
		"@types/ip": "^1.1.0",
		"@typescript-eslint/eslint-plugin": "^5.45.0",
		"@typescript-eslint/parser": "^5.45.0",
		"@unocss/core": "^0.54.1",
		"@unocss/extractor-svelte": "^0.54.1",
		"@unocss/preset-attributify": "^0.54.1",
		"@unocss/preset-icons": "^0.54.1",
		"@unocss/preset-rem-to-px": "^0.54.1",
		"@unocss/preset-uno": "^0.54.1",
		"@unocss/reset": "^0.54.1",
		"@unocss/transformer-directives": "^0.54.1",
		"dayjs": "^1.11.9",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"focus-trap": "^7.5.2",
		"nanoid": "^4.0.2",
		"overlayscrollbars-svelte": "0.5.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"sass": "^1.63.6",
		"svelte": "4.2.0",
		"svelte-awesome-color-picker": "^2.4.7",
		"svelte-check": "^3.5.1",
		"svelte-dnd-action": "^0.9.29",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"unocss": "^0.54.1",
		"vite": "^4.4.2",
		"vitest": "^0.32.2"
	},
	"type": "module",
	"dependencies": {
		"@extractus/feed-extractor": "^7.0.5",
		"commander": "^11.0.0",
		"cron-parser": "^4.9.0",
		"ip": "^2.0.0",
		"metascraper": "^5.35.1",
		"metascraper-author": "^5.35.1",
		"metascraper-description": "^5.35.1",
		"metascraper-image": "^5.35.1",
		"metascraper-logo": "^5.35.1",
		"metascraper-logo-favicon": "^5.35.1",
		"metascraper-title": "^5.35.1",
		"playwright": "^1.37.0",
		"pm2": "^5.3.0",
		"robust-rss-finder": "^2.1.5",
		"sequelize": "^6.32.1",
		"sqlite3": "^5.1.6"
	}
}
